    <main class="container">
        <h2 style="text-align: center;">Checkout</h2>
        <div class="row">
            <div class="col-md-6">
                 <form name="datosCompra" method="post" action="/tienda/checkout/direccion" id="datosCompra" >
                    <div class="form-group">
                        <!-- Nombre del cliente -->
                        <h3>Nombre: {{nombreUsuario}} {{apellido}} </h3>
                    </div>
                    
                    {{!-- Direccion de entrega --}}
                    <div>
                        <h3>Direccion De Entrega</h3>    
                        <div class="form-group">
                            <!-- Street 1 -->
                            <label for="calle" class="control-label">Calle Y Numero</label>
                            <input type="text" class="form-control" id="calle" name="calle" placeholder="Juarez #5" required>
                        </div>

                        <div class="form-group">
                            <!-- City-->
                            <label for="colonia" class="control-label">Colonia</label>
                            <input type="text" class="form-control" id="colonia" name="colonia" placeholder="Napoles" required>
                        </div>

                        <div class="form-group">
                            <!-- Nunicipio-->
                            <label for="municipio" class="control-label">Municipio</label>
                            <input type="text" class="form-control" id="municipio" name="municipio" placeholder="Benito Juarez" required>
                        </div>

                        <div class="form-group">
                            <!-- State-->
                            <label for="city_id" class="control-label">Estado</label>
                            <input type="text" class="form-control" id="estado" name="estado" placeholder="Ciudad De Mexico" required>
                        </div>
                    </div>

                    {{!-- Pago --}}
                    <div>
                        <h3>Método De Pago</h3>
                        <div class="form-group">
                            <label for="numTarjeta" class="control-label">Numero de tarjeta</label>
                            <input type="number" class="form-control" id="numTarjeta" name="numTarjeta" placeholder="0000 0000 0000 0000">
                            <div class="fieldset-expiration" style="display: flex">
                                <select name="mesExpiracion" id="mesExpiracion" class="form-select">
                                    <option value="mes">Mes</option>
                                    <option value="01">01</option>
                                    <option value="02">02</option>
                                    <option value="03">03</option>
                                    <option value="04">04</option>
                                    <option value="05">05</option>
                                    <option value="06">06</option>
                                    <option value="07">07</option>
                                    <option value="08">08</option>
                                    <option value="09">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                                <select name="anioExpiracion" id="anioExpiracion" class="form-select">
                                    <option value="anio">Año</option>
                                    <option value="2021">2021</option>
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                    <option value="2024">2024</option>
                                    <option value="2025">2025</option>
                                    <option value="2026">2026</option>
                                    <option value="2027">2027</option>
                                </select>
                                <input type="number" class="form-control" id="cvv" name="cvv" placeholder="CVV">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Submit Button -->
                        <button id="botonCompra" type="submit" class="btn btn-primary">Comprar!</button>
                        <a href="/tienda/carrito" type="submit" class="btn btn-danger">Regresar al carrito</a>
                    </div>

                </form>

            </div>

            <div class="col-md-6">
                <table class="table">
                    <thead>
                        <th>imagen</th>
                        <th>nombre</th>
                        <th>cantida</th>
                        <th>total</th>
                    </thead>
                    {{#each productos}}
                    <tbody>
                        <th> <img src="{{imagen}}"> </th>
                        <th>{{nombre}}</th>
                        <th>{{cantidad}}</th>
                        <th>{{total}}</th>
                    </tbody>
                    {{/each}}

                    <tfoot>
                        <th></th>
                        <th></th>
                        <th>Total:</th>
                        <th>{{total}}</th>
                    </tfoot>
                </table>
            </div>
        </div>
